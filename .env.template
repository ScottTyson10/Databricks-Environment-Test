# Databricks Configuration
# Copy this file to .env and fill in your actual values

# Databricks workspace URL (e.g., https://xxx.cloud.databricks.com)
DATABRICKS_HOST=

# Personal access token for authentication
DATABRICKS_TOKEN=

# SQL warehouse ID for query execution (optional for discovery, required for SQL operations)
DATABRICKS_WAREHOUSE_ID=

# Discovery Configuration for Production Tests
# Leave blank for default behavior: discover ALL accessible catalogs/schemas

# Target specific catalogs (comma-separated, e.g., "workspace,samples")
# Default: Discover all accessible catalogs (excluding system catalogs)
# DISCOVERY_TARGET_CATALOGS=

# Target specific schemas (comma-separated, e.g., "pytest_test_data,information_schema")  
# Default: Discover all schemas within target catalogs
# DISCOVERY_TARGET_SCHEMAS=

# Maximum total tables to discover (safety limit)
# Default: 5000
# DISCOVERY_MAX_TABLES=5000

# Maximum tables per schema (safety limit)
# Default: 1000
# DISCOVERY_MAX_PER_SCHEMA=1000

# Include system catalogs (system, information_schema) in discovery
# Default: false (system catalogs excluded)
# DISCOVERY_INCLUDE_SYSTEM=false

# Test Configuration
# Enable database storage of test results (true/false)
ENABLE_RESULTS_DATABASE=false

# Test data configuration - DEVELOPMENT ONLY
# Set to true ONLY for development/testing environments
# NEVER set to true in production environments
CREATE_TEST_TABLES=false

# Test table location (only used if CREATE_TEST_TABLES=true)
TEST_CATALOG=workspace
TEST_SCHEMA=pytest_test_data

# Parallel execution workers (for pytest-xdist)
TEST_PARALLEL_WORKERS=4

# Production behavior - how to handle validation failures
# strict: Fail tests on validation errors (recommended for CI/CD)
# monitor: Log warnings but continue (recommended for monitoring)
PRODUCTION_MODE=strict

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO